{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "resolveJsonModule": true
  },
  "include": [
    "**/*.ts",
    "**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}